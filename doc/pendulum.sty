\newcommand*\Partial[3][1]{
	\ifnum #1=1 {
		\frac{\partial #2}{\partial #3}
	} \else {
		\frac{\partial^{ #1} #2}{\partial #3^{ #1}}
	}
	\fi
}
\newcommand*\ImplicitPt[3]{ \left(\Partial{ #1}{ #2}\right)_{ #3} }

